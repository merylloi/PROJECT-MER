local player = game.Players.LocalPlayer 
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))() 
local Window = OrionLib:MakeWindow({
    Name = "MER HUB V2", 
    HidePremium = false, 
    SaveConfig = true, 
    ConfigFolder = "OrionTest",
    IntroEnabled = false,
    Icon = "rbxassetid://4483345998",
    CloseCallback = function()
        print("Window closed!")
    end,
    Color = Color3.fromRGB(255, 0, 0),
    Background = "rbxassetid://2151741365", -- You can replace this with a gradient image asset ID
    BackgroundColor = Color3.fromRGB(255, 0, 0),
    BorderColor = Color3.fromRGB(200, 0, 0)
})

--[[
    Name = - The name of the UI.
    HidePremium = - Whether or not the user details shows Premium status or not.
    SaveConfig = - Toggles the config saving in the UI.
    ConfigFolder = - The name of the folder where the configs are saved.
    IntroEnabled = false - Whether or not to show the intro animation.
    IntroText = - Text to show in the intro animation.
    IntroIcon = - URL to the image you want to use in the intro animation.
    Icon = - URL to the image you want displayed on the window.
    CloseCallback = - Function to execute when the window is closed.
    Color = - The main color of the UI.
    Background = - The background image of the UI.
    BackgroundColor = - The background color of the UI.
    BorderColor = - The border color of the UI.
]]

local Tab = Window:MakeTab({
    Name = "Tab 1",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

local Section = Tab:AddSection({
    Name = "LocalPlayer"
})


OrionLib:MakeNotification({
    Name = "Welcome!",
    Content = "Welcome to my hub!",
    Image = "rbxassetid://4483345998",
    Time = 5
})


-- Toggle for High Speed
Tab:AddToggle({
    Name = "High Speed",
    Default = false,
    Callback = function(value)
        if value then
            player.Character.Humanoid.WalkSpeed = 100
        else
            player.Character.Humanoid.WalkSpeed = 16 -- Default walk speed
        end
    end
})

-- Toggle for High Jumppower
Tab:AddToggle({
    Name = "High Jumppower",
    Default = false,
    Callback = function(value)
        if value then
            player.Character.Humanoid.JumpPower = 5000
        else
            player.Character.Humanoid.JumpPower = 50 -- Default jump power
        end
    end
})

-- Toggle for Low Gravity
Tab:AddToggle({
    Name = "Low Gravity",
    Default = false,
    Callback = function(value)
        if value then
            game.Workspace.Gravity = 10
        else
            game.Workspace.Gravity = 196.2 -- Default gravity
        end
    end
})
